{
    "name": "PipX",
    "description": "Customizable Picture-in-Picture with enhanced controls and themes",
    "version": "2.0.0",
    "manifest_version": 3,
    
    "icons": {
      "16": "assets/icons/icon16.png",
      "19": "assets/icons/icon19.png",
      "38": "assets/icons/icon38.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    
    "background": {
      "service_worker": "background/background.js"
    },
    
    "action": {
      "default_popup": "popup/popup.html",
      "default_title": "PipX",
      "default_icon": {
        "19": "assets/icons/icon19.png",
        "38": "assets/icons/icon38.png"
      }
    },
    
    "options_page": "options/options.html",
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "utils/constants.js",
          "utils/storage.js",
          "content/core/script.js",
          "content/core/pipControls.js",
          "content/site-specific/youtube.js",
          "content/site-specific/generic.js",
          "content/core/auto-pip.js",
          "test-scripts.js"
        ],
        "run_at": "document_idle"
      }
    ],
    
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+P",
          "windows": "Alt+P",
          "mac": "Alt+P",
          "chromeos": "Alt+P",
          "linux": "Alt+P"
        }
      },
      "toggle_pip": {
        "suggested_key": {
          "default": "Ctrl+Shift+P",
          "windows": "Ctrl+Shift+P",
          "mac": "Command+Shift+P"
        },
        "description": "Toggle Picture-in-Picture"
      }
    },
    
    "permissions": [
      "storage",
      "scripting",
      "contextMenus",
      "activeTab",
      "commands"
    ],
    
    "host_permissions": [
      "<all_urls>"
    ],
    
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
    },

    "web_accessible_resources": [
      {
        "resources": [
          "assets/themes/*.css",
          "assets/icons/*.png"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }